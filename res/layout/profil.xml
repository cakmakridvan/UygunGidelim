<?xml version="1.0" encoding="UTF-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/arkaplan"
    > 

<LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    
     >

    <ImageView
       
        android:layout_marginTop="10dp"
        android:layout_gravity="top"
        android:id="@+id/imageView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/logo" />

    <LinearLayout
        android:layout_marginTop="@dimen/profil_layout_margin_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:orientation="horizontal"
         >

        <ImageButton
            android:layout_weight="1"
            android:id="@+id/imageButton1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/yolculukara" />

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/yolculuklarim" />

        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/profil" />
        
    </LinearLayout>
    
        <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:orientation="horizontal"
         >

            <TextView
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_weight="1"
                android:id="@+id/textView1"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:text="Yolculuk Ara" />
            
                        <TextView
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_weight="1"
                android:id="@+id/textView2"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:text="Yolculuklarım" />
                        
                                    <TextView
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_weight="1"
                android:id="@+id/textView3"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:text="Profil" />
        
    </LinearLayout>
    
        <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:orientation="horizontal"
         >

        <ImageButton
            android:layout_weight="1"
            android:id="@+id/imageButton4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/hakkimizda" />

        <ImageButton
            android:id="@+id/imageButton5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/yardim" />

        <ImageButton
            android:id="@+id/imageButton6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/cikis" />
        
    </LinearLayout>
    
        <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:orientation="horizontal"
         >

            <TextView
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_weight="1"
                android:id="@+id/textView4"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:text="Hakkımızda" />
            
                        <TextView
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_weight="1"
                android:id="@+id/textView5"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:text="Yardım" />
                        
                                    <TextView
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_weight="1"
                android:id="@+id/textView6"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:text="Çıkış" />
        
    </LinearLayout>
    
            <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
         >
                                    
                        <ImageButton
            
            android:id="@+id/imageButton7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/panic" />
                        
                        <TextView
                android:textColor="@color/black"
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Panik Butonu" />
                                    
                </LinearLayout>
    
        

</LinearLayout>
</ScrollView>